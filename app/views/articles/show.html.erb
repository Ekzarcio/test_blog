<h1><%= @article.title %></h1>
<h2>
  <%= @article.text %>
</h2>
<p>
  <%= link_to 'Back', articles_path %><br />
  <hr />
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :author %><br />
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</p>
